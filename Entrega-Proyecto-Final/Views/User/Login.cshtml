
@{
    ViewBag.Title = "Login";
}
<!-- Page Content -->
<div class="container">
    <!-- Introduction Row -->
    <h1 class="my-4">
        Academy
        <small>Login</small>
    </h1>
    <p>Academy se dedica a realizar cursos de calidad para empresas, gobierno y publico en general para dar educación, trabajo e inclusión a la sociedad</p>

    <!-- Content Row -->
    <div class="row">
        <div class="col-lg-8 mb-4">
            <form class="form-signin" method="post" action="@Url.Action("DoLogin","User")">
                <h2 class="form-signin-heading">Inicie sesión</h2>
                <br />
                <label for="inputEmail" class="sr-only">Email address</label>
                <input type="email" id="inputEmail" name="mail" class="form-control" placeholder="Correo Electrónico" required="" autofocus="">
                <br />
                <label for="inputPassword" class="sr-only">Password</label>
                <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Contraseña" required="">
                <br />
                <button class="btn btn-lg btn-default" type="submit">Enviar</button>
            </form>
        </div>

    </div>
    <!-- /.row -->

</div>