@model Entrega_Proyecto_Final.Models.User

@{
    ViewBag.Title = "Detalles";
    if (TempData["Message"] != null)
    {
        <div class="alert alert-success my-alert-message-mvc">
            <button type="button" class="close" data-dismiss="alert">x</button>
            <strong style="color:#0E3047;">@TempData["Message"]</strong>

        </div>
    }
}



<h2>Datos del Usuario</h2>

<div>
    <h4>Detalles</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Mail):
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Mail)
        </dd>

        <dt>
            Nombre completo:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CompleteName)
        </dd>

    </dl>
</div>
<div>
    <h3>Felicidades usted se ha inscripto</h3>
    <hr />
</div>

    <p>
        @Html.ActionLink("Ver sus inscripciones", "UserInscriptions", new { controller = "User", idUser = Model.ID })
    </p>


    <p>
        @Html.ActionLink("Volver a Inicio", "Index")
    </p>
