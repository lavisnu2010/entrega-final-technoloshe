@{
    ViewBag.Title = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Content/img/alumnos.jpg" alt="Alumnos">
            <div class="carousel-caption">
                <h3>Academy</h3>
                <p>Los Alumnos de Academy!</p>
            </div>
        </div>

        <div class="item">
            <img src="~/Content/img/Cursos_InCompany.jpg" alt="Cursos">
            <div class="carousel-caption">
                <h3>Cursos In Company</h3>
                <p>Cursos para empresas y sector público!</p>
            </div>
        </div>

        <div class="item">
            <img src="~/Content/img/Cursos_OnlineDistancia.jpg" alt="Cursos Presencial">
            <div class="carousel-caption">
                <h3>Cursos Presenciales</h3>
                <p>Próximamente a Distancia!</p>
            </div>
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">

    <div class="col-md-4">
        <h2>Programa Reinserción</h2>
        <p>Reinserción Laboral de población profesional en situación de vulnerabilidad, adultos de 40 a 65 años y jóvenes de 18 a 25 años</p>
        <p> @Html.ActionLink("Más Info \u00BB", "Courses", null, new { @class = "btn btn-default" })<p />
    </div>
    <div class="col-md-4">
        <h2>Programa Sustentabilidad</h2>
        <p>Capcitaciones en Responsabilidad Social, Medio Ambiente, Gestor de Procesos, Transparencia y Rendición de Cuentas</p>
        <p> @Html.ActionLink("Más Info \u00BB", "Courses", null, new { @class = "btn btn-default" })<p />
    </div>
    <div class="col-md-4">
        <h2>Programa Diversidad</h2>
        <p>Cursos de temática de Prevención de la Violencia Genero, Derecho Procesal Penal,Derechos Humanos y su Difusión en Medios</p>
        <p> @Html.ActionLink("Más Info \u00BB", "Courses", null, new { @class = "btn btn-default" })<p/>
    </div>
</div>